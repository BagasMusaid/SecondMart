<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="2dp"
    app:cardElevation="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/image_RV"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="4dp">
            <ImageView
                android:id="@+id/IV_Post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tegar"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/image_RV">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/TV_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Iphone 11 65GB"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:fontFamily="@font/pbold"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-3dp">

                    <TextView
                        android:id="@+id/TV_Location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:fontFamily="@font/pmedium"
                        android:textColor="@color/bookmart"
                        android:text="Kalikotes, Klaten"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tagar"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="#"
                        android:textSize="10sp"
                        android:textColor="@color/orange" />
                    <TextView
                        android:id="@+id/TV_Category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Elektronik"
                        android:textSize="10sp"
                        android:layout_marginLeft="-12dp"
                        android:textColor="@color/orange"
                        android:layout_toEndOf="@id/tagar" />
                </RelativeLayout>
            </LinearLayout>
            <ToggleButton
                android:id="@+id/icon_stored"
                android:layout_width="28dp"
                android:layout_height="29dp"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/bookmart_full"
                android:backgroundTint="@color/bookmart"
                android:layout_alignParentEnd="true"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>